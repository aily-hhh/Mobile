<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.bicycles.DataFragment">

    <ImageView
        android:id="@+id/mountainBicycle"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="8dp"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/mountain_bicycle"
        app:layout_constraintBottom_toBottomOf="@+id/descriptMountain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/descriptMountain"
        tools:targetApi="s" />

    <View
        android:id="@+id/viewMountain"
        android:layout_width="70dp"
        android:layout_height="1dp"
        android:background="@color/light_grey"
        app:layout_constraintBottom_toBottomOf="@+id/tvMountain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvMountain"
        app:layout_constraintTop_toTopOf="@+id/tvMountain" />

    <TextView
        android:id="@+id/tvMountain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="monospace"
        android:text="Горный велосипед"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descriptMountain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Это наиболее массовая и востребованная группа велосипедов. Их главным достоинством является универсальность: они эффективны в условиях бездорожья, подходят для длительных туристических поездок и весьма уверенно ведут себя в оживленном городском потоке."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/mountainBicycle"
        app:layout_constraintTop_toBottomOf="@id/tvMountain" />

    <TextView
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="•"
        android:textColor="@color/light_blue"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descriptMountain" />

    <ImageView
        android:id="@+id/highwayBicycle"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginEnd="8dp"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/highway_bicycle"
        app:layout_constraintBottom_toBottomOf="@+id/descriptHighway"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/descriptHighway"
        tools:targetApi="s" />

    <TextView
        android:id="@+id/tvHighway"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:text="Шоссейный велосипед"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/one" />

    <View
        android:id="@+id/viewHighway"
        android:layout_width="70dp"
        android:layout_height="1dp"
        android:background="@color/light_grey"
        app:layout_constraintBottom_toBottomOf="@+id/tvHighway"
        app:layout_constraintEnd_toStartOf="@+id/tvHighway"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvHighway" />

    <TextView
        android:id="@+id/descriptHighway"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:textAlignment="viewEnd"
        android:text="Предназначены для быстрой езды по ровному асфальтированному покрытию. Конструкция таких велосипедов позволяет развивать высокие скорости и поддерживать их на протяжении длительного периода. До недавнего времени такие велосипеды оставались прерогативой преимущественно спортсменов, сейчас же их выбирают все, кто ценит скоростное катание по трассам."
        app:layout_constraintEnd_toStartOf="@id/highwayBicycle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHighway" />

    <TextView
        android:id="@+id/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="•"
        android:textColor="@color/light_blue"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descriptHighway" />

    <ImageView
        android:id="@+id/cityBicycle"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="8dp"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/city_bicycle"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        tools:targetApi="s" />

    <TextView
        android:id="@+id/tvCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="monospace"
        android:text="Городской велосипед"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/two" />

    <View
        android:id="@+id/viewCity"
        android:layout_width="70dp"
        android:layout_height="1dp"
        android:background="@color/light_grey"
        app:layout_constraintBottom_toBottomOf="@+id/tvCity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvCity"
        app:layout_constraintTop_toTopOf="@+id/tvCity" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:layout_marginBottom="32dp"
        android:text="Как несложно догадаться, это категория моделей, предназначенных для езды в городских условиях. Дорожный велосипед – это оптимальный вариант, если вы планируете каждодневные поездки на относительно небольшие расстояния, неспешные покатушки всей семьей или другой формат поездок в условиях города. "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cityBicycle"
        app:layout_constraintTop_toBottomOf="@id/tvCity" />


</androidx.constraintlayout.widget.ConstraintLayout>